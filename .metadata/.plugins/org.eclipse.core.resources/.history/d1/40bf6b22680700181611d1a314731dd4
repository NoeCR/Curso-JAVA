import java.util.Arrays;
import java.util.Random;
import java.util.Scanner;
public class Ejercicio2 {
    public static void rellenaArray(int[] a, int max){
        Random aleatorio = new Random(System.currentTimeMillis());
        // Producir nuevo int aleatorio entre 0 y (max-1)
        int intAleatorio;
        for (int i = 0; i < a.length; i++){
            a[i] = aleatorio.nextInt(max);
        }
    }
    public static void main(String[] args) {
      int[] array1 = new int[20];
      rellenaArray(array1, 30);
      //numero introducido por el usuario
      int num;

      //Antes de empezar a trabajar con el array lo imprimimos
      System.out.println("Array : "+Arrays.toString(array1));
      System.out.println("Introduzca un valor que desee eliminar");
      Scanner inputValue;
      inputValue = new Scanner(System.in);

      do{
        num = inputValue.nextInt();
        if ((num > array1.length) || (num < 1)){
          System.out.println("Introduzca un valor entre 1 y " + array1.length);
        }
      }while ((num > array1.length) || (num < 1));

      for(int i = num - 1; i < (array1.length - 1); i++){
          //System.out.println(array1[i]);
          array1[i] =  array1[i + 1];

      }
      System.out.println("Array : "+Arrays.toString(array1));


    }
}
